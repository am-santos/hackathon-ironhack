<div >
    <div >
        <h3 >Update your info</h3>
    </div>
    <div >
        <form action="" method="POST">

            <div >
                <label for="input-picture">Picture</label>
                <input type="file" name="picture" id="picture-input">
            </div>

            <div >
                <label for="input-name">Name</label>
                <input type="text" id="input-name" name="name" value="{{renderUser.name}}"
                    placeholder="Your Name" />
            </div>

            <div >
                <label for="input-email">Email</label>
                <input type="email" id="input-email" name="email" value="{{renderUser.email}}"
                    placeholder="Your Email" />
            </div>

            <div>
                <label for="input-role">Role</label>
                <input type="text" id="input-role" name="role" value="{{renderUser.role}}"
                    placeholder="Your Role" />
            </div>

            <div >
                <label for="input-password">Password</label>
                <input type="password" name="password" id="input-password"
                    placeholder="A Strong Password" />
            </div>

            <button class="btn btn-success float-right">Update</button>
        </form>
    </div>